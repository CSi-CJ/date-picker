{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/spec",
        "allowJs": true,
        "types": [
            "jest",
            "node",
            "@types/resize-observer-browser",
            "@types/ckeditor"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "files": [
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ]
}
